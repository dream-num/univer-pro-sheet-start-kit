{
  "name": "univer-pro-sheet-start-kit",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "A starter kit for Univer Server",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "build:pkg": "pnpm build && cd .github/server && pnpm build:pkg",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@univerjs/action-recorder": "0.5.1",
    "@univerjs/presets": "0.5.1",
    "@univerjs/sheets-crosshair-highlight": "0.5.1",
    "@univerjs/sheets-zen-editor": "0.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.23.1",
    "eslint": "^9.7.0",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "^15.2.7",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
